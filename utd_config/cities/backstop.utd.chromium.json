{
  "id": "urban_transport_data",
  "engine": "playwright",
  "engineOptions": {
    "browser": "chromium",
    "args": [
      "--use-gl=desktop",
      "--enable-gpu",
      "--ignore-gpu-blocklist"
    ]
  },
  "viewports": [
    {
      "label": "desctop",
      "width": 1920,
      "height": 1080
    },
    {
      "label": "mini_desc",
      "width": 1440,
      "height": 900
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "tablet_mini",
      "width": 600,
      "height": 768
    },
    {
      "label": "phone",
      "width": 375,
      "height": 768
    }
  ],
  "scenarioDefaults": {
    "cookiePath": "backstop_data/engine_scripts/cookies.json",
    "url": "https://urbantransportdata.ru/cities",
    "selectorExpansion": true,
    "misMatchThreshold" : 0.1,
    "requireSameDimensions": true
  },
  "scenarios": [
    {
      "label": "utd_cities_main",
      "selectors": ["document"],
      "onReadyScript": "onlyScreen.js"
    },
    {
      "label": "utd_cities_main_logout",
      "selectors": ["document"],
      "viewports": [
        {
          "label": "desctop",
          "width": 1920,
          "height": 1080
        }
      ],
      "onReadyScript": "utd_cities_main_hover.js"
    },
    {
      "label": "utd_cities_main_hover",
      "selectors": ["document"],
      "onBeforeScript": "login.js",
      "onReadyScript": "utd_cities_main_hover.js"
    },
    {
      "label": "utd_cities_list",
      "selectors": ["document"],
      "viewports": [
        {
          "label": "desctop",
          "width": 1920,
          "height": 1080
        },
        {
          "label": "phone",
          "width": 375,
          "height": 812
        }
      ],
      "onBeforeScript": "login.js",
      "onReadyScript": "utd_cities_list.js"
    },
    {
      "label": "utd_cities_moscow",
      "selectors": ["document"],
      "viewports": [
        {
          "label": "desctop",
          "width": 1920,
          "height": 14116
        },
        {
          "label": "tablet_mini",
          "width": 834,
          "height": 13068
        },
        {
          "label": "phone",
          "width": 375,
          "height": 9468
        }
      ],
      "onBeforeScript": "login.js",
      "onReadyScript": "utd_cities_moscow.js"
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/chromium/bitmaps_reference/utd/cities",
    "bitmaps_test": "backstop_data/chromium/bitmaps_test/utd/cities",
    "engine_scripts": "backstop_data/chromium/engine_scripts/utd/cities",
    "html_report": "backstop_data/chromium/html_report/utd/cities",
    "ci_report": "backstop_data/chromium/ci_report/utd/cities"
  },
  "report": ["browser"],
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false,
  "archiveReport": false,
  "scenarioLogsInReports": false
}