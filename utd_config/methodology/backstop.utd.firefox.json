{
  "id": "urban_transport_data",
  "engine": "playwright",
  "engineOptions": {
    "browser": "firefox",
    "args": [
      "--use-gl=desktop",
      "--enable-gpu",
      "--ignore-gpu-blocklist"
    ]
  },
  "viewports": [
    {
      "label": "desctop",
      "width": 1920,
      "height": 11920
    }
  ],
  "scenarioDefaults": {
    "cookiePath": "backstop_data/engine_scripts/cookies.json",
    "url": "https://urbantransportdata.ru/methodology",
    "selectorExpansion": true,
    "misMatchThreshold" : 0.1,
    "requireSameDimensions": true
  },
  "scenarios": [
    {
      "label": "utd_methodology",
      "selectors": ["document"],
      "onBeforeScript": "login.js",
      "onReadyScript": "utd_methodology.js"
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/firefox/bitmaps_reference/utd/methodology",
    "bitmaps_test": "backstop_data/firefox/bitmaps_test/utd/methodology",
    "engine_scripts": "backstop_data/firefox/engine_scripts/utd/methodology",
    "html_report": "backstop_data/firefox/html_report/utd/methodology",
    "ci_report": "backstop_data/firefox/ci_report/utd/methodology"
  },
  "report": ["browser"],
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false,
  "archiveReport": false,
  "scenarioLogsInReports": false
}