{
  "id": "urban_transport_data",
  "engine": "playwright",
  "engineOptions": {
    "browser": "webkit",
    "args": [
      "--use-gl=desktop",
      "--enable-gpu",
      "--ignore-gpu-blocklist"
    ]
  },
  "viewports": [
    {
      "label": "desctop",
      "width": 1920,
      "height": 1080
    },
    {
      "label": "mobile",
      "width": 375,
      "height": 768
    }
  ],
  "scenarioDefaults": {
    "cookiePath": "backstop_data/engine_scripts/cookies.json",
    "url": "https://urbantransportdata.ru/dashboards",
    "selectorExpansion": true,
    "misMatchThreshold" : 0.1,
    "requireSameDimensions": true
  },
  "scenarios": [
    {
      "label": "utd_dashboards_one_city",
      "selectors": ["document"],
      "viewports": [
        {
          "label": "desctop",
          "width": 1920,
          "height": 1080
        },
        {
          "label": "tablet",
          "width": 834,
          "height": 1194
        },
        {
          "label": "mobile",
          "width": 375,
          "height": 768
        }
      ],
      "onBeforeScript": "login.js",
      "onReadyScript": "utd_dashboards_one_city.js"
    },
    {
