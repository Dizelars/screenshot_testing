{
  "id": "urban_transport_data",
  "engine": "playwright",
  "engineOptions": {
    "browser": "firefox"
  },
  "viewports": [
    {
      "label": "default",
      "width": 1920,
      "height": 1080
    }
  ],
  "scenarioDefaults": {
    "cookiePath": "backstop_data/engine_scripts/cookies.json",
    "url": "https://urbantransportdata.ru",
    "selectorExpansion": true,
    "misMatchThreshold" : 0.1,
    "requireSameDimensions": true
  },
  "scenarios": [
    {
      "label": "urban_transport_data",
      "delay": 4000,
      "selectors": ["document"],
      "viewports": [
        {
          "label": "urban_transport_data",
          "width": 1920,
          "height": 1080
        }
      ]
    },
    {
      "label": "utd_get_started",
      "delay": 4000,
      "selectors": ["document"],
      "viewports": [
        {
          "label": "utd_get_started",
          "width": 1920,
          "height": 1080
        }
      ],
      "onReadyScript": "utd_get_started.js"
    },
    {
      "label": "utd_about_project",
      "delay": 4000,
      "selectors": ["document"],
      "viewports": [
        {
          "label": "utd_about_project",
          "width": 1920,
          "height": 1080
        }
      ],
      "onReadyScript": "utd_about_project.js"
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/firefox/bitmaps_reference",
    "bitmaps_test": "backstop_data/firefox/bitmaps_test",
    "engine_scripts": "backstop_data/firefox/engine_scripts",
    "html_report": "backstop_data/firefox/html_report",
    "ci_report": "backstop_data/firefox/ci_report"
  },
  "report": ["browser"],
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false,
  "archiveReport": true,
  "scenarioLogsInReports": true
}