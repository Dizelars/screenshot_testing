{
  "id": "garage-test",
  "engine": "playwright",
  "engineOptions": {
    "browser": "firefox"
  },
  "viewports": [
    {
      "label": "default",
      "width": 1440,
      "height": 900
    }
  ],
  "scenarioDefaults": {
    "cookiePath": "backstop_data/engine_scripts/cookies.json",
    "url": "https://garage-codd.ru",
    "removeSelectors": [
      ".main_intro_media"
    ],
    "selectorExpansion": true,
    "misMatchThreshold": 0.1,
    "requireSameDimensions": true
  },
  "scenarios": [
    {
      "label": "main_section",
      "onReadyScript": "main_section.js",
      "selectors": ["section.main"],
      "viewports": [
        {
          "label": "main_section",
          "width": 1440,
          "height": 933
        }
      ]
    },
    {
      "label": "water_patrol",
      "onReadyScript": "water_patrol.js",
      "removeSelectors": [
        "#water_patrol .slid_img picture",
        "#water_patrol .slid_img video"
      ],
      "selectors": ["section#water_patrol"],
      "viewports": [
        {
          "label": "water_patrol",
          "width": 1440,
          "height": 627
        }
      ]
    },
    {
      "label": "open_menu",
      "onReadyScript": "open_menu.js",
      "selectors": [".menu"],
      "viewports": [
        {
          "label": "open_menu",
          "width": 1440,
          "height": 936
        }
      ]
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/firefox/bitmaps_reference",
    "bitmaps_test": "backstop_data/firefox/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/firefox/html_report",
    "ci_report": "backstop_data/firefox/ci_report"
  },
  "report": ["browser"],
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false,
  "archiveReport": true,
  "scenarioLogsInReports": true
}
